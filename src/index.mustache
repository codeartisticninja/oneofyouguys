{{#block}}yield=
  <div class="hidden" id="game"></div>
  <article class="page-width">
    <noscript>You need to enable JavaScript in order to play this game.</noscript>
    <h1>{{title}}</h1>
    <section id="description">
      <h2>Be whoever you want to be</h2>
      <p>{{description}}</p>
      <p>Move around, shoot strangers and take over their bodies to make friends..</p>
    </section>
    <section id="credits">
      <h2>Credits</h2>
      <p>Code and graphics by <a href="http://the.codeartistic.ninja/">codeartistic.ninja</a>.</p>
      <p>8-bit font by <a href="http://opengameart.org/content/a-package-of-8-bit-fonts-for-grafx2-and-linux">usr_share</a>.</p>
      <p>Music by <a href="https://soundcloud.com/auditory_cheesecake">Auditory Cheesecake</a>.</p>
    </section>
  </article>
  <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/phaser/2.5.0/phaser.min.js"></script>
  <script type="text/javascript" src="script/main.js"></script>
{{/block}}
{{>_layout}}
